{
  "description": "Assemble reads into a set of contigs",
  "id": "ViralAssembly",
  "label": "Assemble viral genomes",
  "parameters": [
    {
      "default": null,
      "group": [
        {
          "desc": "FASTQ or FASTA file of reads",
          "id": "read1",
          "label": "Read file 1",
          "required": 1,
          "type": "wstype",
          "wstype": "ReadFile"
        },
        {
          "desc": "FASTQ or FASTA file of reads",
          "id": "read2",
          "label": "Read file 2",
          "required": 0,
          "type": "wstype",
          "wstype": "ReadFile"
        }
      ],
      "id": "paired_end_lib",
      "required": 0,
      "type": "group"
    },
    {
      "default": null,
      "group": [
        {
          "desc": "FASTQ, FASTA or H5 file of reads",
          "id": "read",
          "label": "Read file",
          "required": 1,
          "type": "wstype",
          "wstype": "ReadFile"
        }
      ],
      "id": "single_end_lib",
      "required": 0,
      "type": "group"
    },
    {
      "default": null,
      "desc": "Sequence Read Archive (SRA) Run ID",
      "id": "srr_id",
      "label": "SRR ID",
      "required": 0,
      "type": "string"
    },
    {
      "default": "auto",
      "desc": "Strategy used for assembly",
      "enum": [
        "auto",
	"irma"
      ],
      "id": "strategy",
      "label": "Assembly strategy",
      "required": 0,
      "type": "enum"
    },
    {
      "desc": "Virus genome to use a correct module",
      "enum": [
        "FLU",
        "CoV",
        "RSV",
        "EBOLA",
        "FLU_AD",
        "FLU-utr"
      ],
      "id": "module",
      "label": "Virus module",
      "required": 0,
      "type": "enum"
    },
    {
      "default": null,
      "desc": "Path to which the output will be written. Defaults to the directory containing the input data. ",
      "id": "output_path",
      "label": "Output Folder",
      "required": 1,
      "type": "folder"
    },
    {
      "default": null,
      "desc": "Basename for the generated output files. Defaults to the basename of the input data.",
      "id": "output_file",
      "label": "File Basename",
      "required": 1,
      "type": "wsid"
    },
    {
      "default": 0,
      "desc": "Debugging level.",
      "id": "debug",
      "label": "Debug level",
      "required": 0,
      "type": "int"
    }
  ],
  "script": "App-ViralAssembly"
}
